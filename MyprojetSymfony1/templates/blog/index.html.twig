<td>{{employe.service.libelle}}</td>
<td><a href="{{path('blog_edit', {'id': employe.id})}}" class="btn btn-success">modifier</a></td>
<td><a href="{{path('blog_supprimer', {'id': employe.id})}}" class="btn btn-danger">supprimer</a></td>

</tr>
   
   {% endfor %}
</tbody>
    </table>

{% endblock %}
